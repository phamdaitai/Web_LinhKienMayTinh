extends ../layouts/productCommon

block content  
    h1 Tạo Mặt Hàng

    if errors
        each error in errors
            .alert.alert-danger=error
    
    form(action='/productmanager/create', method="POST", enctype="multipart/form-data") 
        .form-group
            label(for="name") Tên
            input#name.form-control(name="name",type="text", value=values ? values.name : "")

        .form-group
            label(for="type") Loại
            input#type.form-control(name="type",type="text", value=values ? values.type : "")
        .form-group
            label(for="price") Giá
            input#price.form-control(name="price",type="text", value=values ? values.price : "")
        .form-group
            label(for="supplier") Hãng
            input#supplier.form-control(name="supplier",type="text", value=values ? values.supplier : "")
        .form-group
            label(for="quantity") Số lượng
            input#quantity.form-control(name="quantity",type="text", value=values ? values.quantity : "")
        .form-group
            label(for="describe") Miêu tả
            input#describe.form-control(name="describe",type="text", value=values ? values.describe : "")
        .form-group
            label(for="image") Ảnh
            input#avatar.form-control-file(name="image",type="file")
        
        button.btn.btn-primary Tạo