extends ../layouts/adminCommon

block content
    h1 Chỉnh sửa

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action='/productmanager/' + products._id, method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Tên
            input#name.form-control(name="name",type="text", value=`${products.name}`)
        .form-group
            label(for="type") Loại
            input#type.form-control(name="type",type="text", value=`${products.type}`)
        .form-group
            label(for="price") Giá
            input#price.form-control(name="price",type="text", value=`${products.price}`)
        .form-group
            label(for="supplier") Hãng
            input#supplier.form-control(name="supplier",type="text", value=`${products.supplier}`)
        .form-group
            label(for="quantity") Số lượng
            input#quantity.form-control(name="quantity",type="text", value=`${products.quantity}`)
        .form-group
            label(for="describe") Miêu tả
            input#describe.form-control(name="describe",type="text", value=`${products.describe}`)
        .form-group
            label(for="image") Ảnh đại diện
            input#image.form-control-file(name="image",type="file" )
        button.btn.btn-primary Cập nhật