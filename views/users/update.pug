extends ../layouts/userCommon

block content
    h1 Chỉnh sửa

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action='/users/' + users._id, method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Tên
            input#name.form-control(name="name",type="text", value=`${users.name}`)
        .form-group
            label(for="phone") Số điện thoại
            input#phone.form-control(name="phone",type="text", value=`${users.phone}`)
        .form-group
            label(for="andress") Địa chỉ
            input#andress.form-control(name="andress",type="text", value=`${users.andress}`)
        .form-group
            label(for="password") Mật khẩu
            input#password.form-control(name="password",type="password", value=`${users.password}`)
        .form-group
            label(for="avatar") Ảnh đại diện
            input#avatar.form-control-file(name="avatar",type="file")
        button.btn.btn-primary Gửi