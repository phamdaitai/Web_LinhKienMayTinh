extends ../layouts/adminCommon

block content
    h1 Chỉnh sửa

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action='/admin/' + admin._id, method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Tên
            input#name.form-control(name="name",type="text", value=`${admin.name}`)
        .form-group
            label(for="phone") Số điện thoại
            input#phone.form-control(name="phone",type="text", value=`${admin.phone}`)
        .form-group
            label(for="email") Địa chỉ email
            input#email.form-control(name="email",type="email", value=`${admin.email}`)
        .form-group
            label(for="password") Mật khẩu
            input#password.form-control(name="password",type="password", value=`${admin.password}`)
        .form-group
            label(for="avatar") Ảnh đại diện
            input#avatar.form-control-file(name="avatar",type="file")
        button.btn.btn-primary Gửi