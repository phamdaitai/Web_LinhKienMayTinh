extends ../layouts/adminCommon

block content
    h1 Vui lòng điền đầy đủ thông tin bên dưới

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action='/admin/create', method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Tên
            input#name.form-control(name="name",type="text", value=values ? values.name : "")
        .form-group
            label(for="phone") Số điện thoại
            input#phone.form-control(name="phone",type="text", value=values ? values.phone : "")
        .form-group
            label(for="email") Email
            input#email.form-control(name="email",type="email", value=values ? values.email : "")
        .form-group
            label(for="password") Mật khẩu
            input#password.form-control(name="password",type="text", value=values ? values.password : "")
        .form-group
            label(for="avatar") Ảnh đại diện
            input#avatar.form-control-file(name="avatar",type="file")                
        button.btn.btn-primary Gửi